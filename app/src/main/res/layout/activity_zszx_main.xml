                    </LinearLayout>
                    <!--原生食材-->
                    <ImageView
                        android:id="@+id/recommend_2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_baner_single_pic" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="top"
                                android:layout_width="24dp"
                                android:layout_height="6dp"
                                android:src="@drawable/home_title_1_ic"/>
                            <TextView
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textColor="@color/black_title_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="特色店铺"/>
                            <ImageView
                                android:layout_gravity="bottom"
                                android:layout_width="24dp"
                                android:layout_height="6dp"
                                android:src="@drawable/home_title_2_ic"/>
                        </LinearLayout>
                    <com.zszx.b2c.ui.MyListview
                        android:id="@+id/mlv_ts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.zszx.b2c.ui.MyListview>
                    <LinearLayout
                        android:gravity="center"
                        android:background="#F3F9ED"
                        android:layout_width="351dp"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_marginRight="5dp"
                            android:textSize="11sp"
                            android:gravity="center"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看更多"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="6dp"
                            android:background="@drawable/home_more_btn"
                            />
                    </LinearLayout>

                        <ImageView
                            android:id="@+id/recommend_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_baner_single_pic" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="15dp"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_gravity="top"
                                    android:layout_width="24dp"
                                    android:layout_height="6dp"
                                    android:src="@drawable/home_title_1_ic"/>
                                <TextView
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textColor="@color/black_title_font"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="新品上架"/>
                                <ImageView
                                    android:layout_gravity="bottom"
                                    android:layout_width="24dp"
                                    android:layout_height="6dp"
                                    android:src="@drawable/home_title_2_ic"/>
                            </LinearLayout>
                    <com.zszx.b2c.view.MyGradView
                        android:id="@+id/gv_xpsj"
                        android:numColumns="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.zszx.b2c.view.MyGradView>
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
