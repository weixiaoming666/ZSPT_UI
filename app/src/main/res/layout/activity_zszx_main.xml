                    </LinearLayout>

                    <!--限时优惠-->
                    <ImageView
                        android:id="@+id/recommend_1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_baner_single_pic" />
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="top"
                            android:layout_width="24dp"
                            android:layout_height="6dp"
                            android:src="@drawable/home_title_1_ic"/>
                        <TextView
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textColor="@color/black_title_font"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="限时优惠"/>
                        <ImageView
                            android:layout_gravity="bottom"
                            android:layout_width="24dp"
                            android:layout_height="6dp"
                            android:src="@drawable/home_title_2_ic"/>
                    </LinearLayout>

                    <com.zszx.b2c.view.MyGradView
                        android:id="@+id/gv_xsyh"
                        android:numColumns="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.zszx.b2c.view.MyGradView>
                    <!--查看更多-->
                    <LinearLayout
