<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="5dp"

    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="170dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_shangpin_da_pic"/>
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="76dp"
            android:layout_height="23dp"
            android:src="@drawable/home_commodity_logo_2_ic"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textSize="14sp"
            android:textColor="@color/font_black"
            android:text="中华老字号 北京稻香村老北京糕点礼盒北京特产小"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_price_discount"
                android:textSize="18sp"
                android:textColor="@color/red_price"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="¥288.88"/>
            <TextView

                android:id="@+id/tv_price_market"
                android:textSize="12sp"
                android:textColor="@color/gray_price"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="¥288.88"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_full"
                android:textSize="11sp"
                android:layout_gravity="bottom"
                android:background="@drawable/shap_bt_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/red"
                android:text="秒杀"/>
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/home_shopping_join_btn"
                android:lines="1"
                android:padding="5dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>